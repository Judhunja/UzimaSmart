# UzimaSmart Environment Variables - Supabase Integration
# Copy this file to .env and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# NASA GIBS Configuration (No API key required - public service)
NASA_EARTHDATA_USERNAME=your_earthdata_username
NASA_EARTHDATA_PASSWORD=your_earthdata_password

# Africa's Talking SMS/USSD API
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key

# Application Settings
SECRET_KEY=your_very_secure_secret_key_here
ENVIRONMENT=development
NODE_ENV=development

# Redis for caching
REDIS_URL=redis://localhost:6379/0

# Optional: Additional weather data
OPENWEATHER_API_KEY=your_openweather_api_key
